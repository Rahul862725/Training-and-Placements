<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>internships</title>

  <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    * {
      box-sizing: border-box;
      padding: 0;
      margin: 0;
    }

    body {
      font-family: "Poppins";
    }

    #header {
      position: sticky;
      top: 0;
    }
  </style>
</head>

<body>
   
  <div>
    {{>header}}
  </div>
  <br><br><br><br><br><br> 
  <div class="bg-[#002A51] text-white py-24 space-y-8">
    <div class="text-center space-y-3">
      <h6 class="text-7xl text-center font-bold">Internships</h6>
      <p class="font">
        A collection of resources for students at NIT Jalandhar
      </p>
    </div>
    <div class="flex items-center justify-center space-x-10">
      <button
          class="border-2 py-2 w-[10rem] hover:bg-[#2069aa] rounded-md" onclick="processClick()" id ="process">
          Process
        </button>
      <button
          class="border-2 py-2 w-[10rem] hover:bg-[#2069aa] rounded-md" onclick="policyClick()">
          Policy
        </button>
      <button
          class="border-2 py-2 w-[10rem] hover:bg-[#2069aa] rounded-md" onclick="insightClick()">
          Insights
        </button>
    </div>
  </div>

  <div id="content">
  </div>
<br>
  
  <div>
    {{>footer}}
  </div>
</body>

<script>
  document.getElementById("process").click();
  
  const link = `{{URL}}/Internship/process`
  const content = document.getElementById('content')

  fetch(link)
  .then(response => response.json())
  .then(data => {
    for(let i = 0; i < data.length; i++) {
      if (data[i].IProcess != null) content.innerHTML = data[i].IProcess;
    }
  })

  function processClick() {
    let pro_link = `{{URL}}/Internship/process`
      fetch(pro_link)
      .then(response => response.json())
      .then(data => {
        for (let i = 0; i < data.length; i++) {
          if (data[i].IProcess != null) content.innerHTML = data[i].IProcess;
        }
      })
  }

  function policyClick() {
    const p_link = `{{URL}}/Internship/policy`
      fetch(p_link)
      .then(response => response.json())
      .then(data => {
        for (let i = 0; i < data.length; i++) {
          if (data[i].IPolicy != null) content.innerHTML = data[i].IPolicy;
        }
      })
  }

  function insightClick() {
    const link = `{{URL}}/Internship/insight`
      fetch(link)
      .then(response => response.json())
      .then(data => {
        console.log(data)
        content.innerHTML = "";
        let str1= `<div>
        <div class="flex justify-center items-center">
          <div class="my-20 max-w-[72vw]">
            <h6 class="text-6xl text-center font-bold">Internship Insights</h6>
            <div class="mt-6 space-y-2 text-center">`

        let str2 = "";
          for(let i=0; i<data.length; i++){
            var student = data[i];
            if(student.TwoMInternship || student.SixMInternship){
              str2 += `<p> `+ student.date.substr(0,10) + ` <span>      </span> ` + student.Name + `      ` + student.RollNo + ` of batch ` + student.Batch + ` from `+ student.Branch + ` branch got Internship at `+ student.Company+` with Stipend of `+ student.Package + `</p>`;
            }
          }

        let str3 = `</div>
              </div>
            </div>
          </div>`

        content.innerHTML += str1 + str2 + str3;
      })
  }

</script>

</html>
