  </div>

  <!-- footer -->

  <div style="bottom: 0; width:100%">
    {{> footer}}
  </div>

</body>

<script src="https://unpkg.com/@popperjs/core@2.9.1/dist/umd/popper.min.js" charset="utf-8"></script>




{{!-- Attach Backend with frontend --}}
<script>

  // for announcements
  const link1 = "{{URL}}/Announcements/"

  // for notices
  const link2 = `{{URL}}/Notices/`;

  fetch(link1)
    .then(response => response.json())
    .then(data => {
      console.log(data)

      let annoucemnts = document.getElementById('annoucements');      
      let itr = 0;

      for (let i = data.length - 1; i >= 0; i--) {

        let el = document.createElement('li');
        el.classList.add("ml-3")
        el.classList.add("mt-1")
        el.classList.add("mb-1")

        let el1 = document.createElement('a');
        let span = document.createElement('span');
        span.style.cssText = "color: #FF8534; font-size: small;"
        span.classList.add("p-3");
        el1.style.cssText = "color: #002A51; font-weight:bold; font-family: 'Open Sans'; font-size:large";

        el1.target = "_blank";
        el1.href = data[i].link;
        el1.innerText = data[i].text;

        span.textContent = data[i].updatedAt.substring(0,10);
        el1.appendChild(span);
        el.appendChild(el1);
        annoucemnts.appendChild(el);
        itr++;
        if (itr == 15) break;
      }
    });

  fetch(link2)
    .then(response => response.json())
    .then(data => {
      console.log(data)

      let notes = document.getElementById("notes");
      let itr = 0;
      
      for (let i = data.length - 1; i >= 0; i--) {
        const notesTemplate = '<div class="xl:w-full md:w-full p-3"><div class="p-6 rounded-lg" style="border: 1px solid #62AAFF; box-shadow: 0px 4px 8px 2px rgba(0, 0, 0, 0.2); border-radius: 6px;"><p class="leading-relaxed text-base">' + data[i].text + '</p></div></div>'
        notes.innerHTML += notesTemplate;
        itr++;
        if (itr == 5) break;
      }
    });

</script>

