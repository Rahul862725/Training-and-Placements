<body>

  <div class="container" style="align-items: center; display: flex; justify-content: center; margin-top: 100px;">
    <form id="myform" action="/People/add_faculty" method="POST" style="margin: 40px;">
      <h1>Add Faculty Data</h1>
    
     <label for="exampleInputCName" class="form-label">Name: </label>
        <input name="name" type="text" class="form-control" id="exampleInputCName" 
          required>

     <label for="exampleInputCName1" class="form-label">Department: </label>
        <input name="department" type="text" class="form-control" id="exampleInputCName1" 
          required>

     <label for="exampleInputCName2" class="form-label">Mobile Number: </label>
        <input name="mob_no" type="text" class="form-control" id="exampleInputCName" 
          required>
     <label for="exampleInputCName3" class="form-label">Email: </label>
        <input name="email" type="email" class="form-control" id="exampleInputCName3" 
          required>
    
     <label for="exampleInputCName4" class="form-label">Designation    </label>
        <input name="designation" type="text" class="form-control" id="exampleInputCName4" 
          required>
    
      <button type="submit" onclick="myFunction()" class="btn btn-outline-success" style="margin: 20px;">Submit</button>
    </form>
  </div>
</body>



