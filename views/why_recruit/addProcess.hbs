<body>

    <div class="container" style="align-items: center; display: flex; justify-content: center; margin-top: 100px;">
        <form id="myform" action="/Why_Recruit/add_process" method="POST" style="margin: 40px;">
            <h1>Add Internship Process</h1>

            <div>
                Content:
            </div>

            <textarea id="content" name="Content" rows="3"> </textarea>

            <div id="addMoreMembers">
            </div>

            <button type="submit" onclick="myFunction()" class="btn btn-outline-success"
                style="margin: 20px;">Submit</button>
        </form>
    </div>
</body>

<div></div>
<script>
    CKEDITOR.replace('Content', {
        fullPage: true, allowedContent: true,
        autoGrow_onStartup: true, enterMode: CKEDITOR.ENTER_BR
    }); let
        Form = document.getElementById("myform"); function myFunction() {
            let
                flag = confirm("Check Internship Process Before Sumbit!"); if (flag) {
                    Form.submit();
                }
        } const link = `{{URL}}/Internship/process`;
    //console.log(link) fetch(link) .then(response => response.json())
    .then(data => {
            for (let i = 0; i < data.length; i++) {
                if (data[i].RProcess !=
                    null) { CKEDITOR.instances.content.insertHtml(data[i].RProcess); break; }
            }
        }); document.getElementById("myform").onkeypress = function (e) {
            var key =
                e.charCode || e.keyCode || 0; if (key == 13) { e.preventDefault(); }
        }

</script>

